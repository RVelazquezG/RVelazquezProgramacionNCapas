@model ML.Aseguradora
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Form</h2>
    <div class="row">

        <div class="col-md-12">

            @using (Html.BeginForm("Form", "Aseguradora", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <div class="form-horizontal">

                    <div class="form-group">

                        <div class="col-md-3">

                            @Html.LabelFor(model => model.IdAseguradora, new { @class = "hidden" })

                            @Html.TextBoxFor(model => model.IdAseguradora, new { @class = "hidden form-control" })

                            @Html.ValidationMessageFor(model => model.IdAseguradora)

                        </div>

                    </div>

                    <div class="form-group">

                        <div class="col-md-3">

                            @Html.LabelFor(model => model.Nombre)

                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })

                            @Html.ValidationMessageFor(model => model.Nombre)

                        </div>

                    </div>

                    <div class="form-group">

                        <div class="col-md-3">

                            @Html.LabelFor(model => model.FechaCreacion, new { @class = "hidden" })

                            @Html.TextBoxFor(model => model.FechaCreacion, new { @class = "hidden form-control" })

                            @Html.ValidationMessageFor(model => model.FechaCreacion)

                        </div>

                    </div>
                    <div class="form-group">

                        <div class="col-md-3">

                            @Html.LabelFor(model => model.FechaModificacion, new { @class = "hidden" })

                            @Html.TextBoxFor(model => model.FechaModificacion, new { @class = "hidden form-control" })

                            @Html.ValidationMessageFor(model => model.FechaModificacion)

                        </div>

                    </div>

                    <div class="form-group">

                        <div class="col-md-3">

                            @Html.LabelFor(model => model.IdUsuario, new { @class = "hidden" })

                            @Html.TextBoxFor(model => model.IdUsuario, new { @class = "hidden form-control" })

                            @Html.ValidationMessageFor(model => model.IdUsuario)

                        </div>

                    </div>


                    <div class="form-group">

                        <div class="col-md-3">

                            @Html.LabelFor(model => model.Usuario.IdUsuario)

                            @Html.DropDownListFor(model => model.Usuario.IdUsuario, new SelectList(Model.Usuario.Usuarios, "IdUsuario", "Nombre"), "Selecciona una opción", new { @class = "form-control" })

                            @Html.ValidationMessageFor(model => model.Usuario.Usuarios)

                        </div>

                    </div>

                    <div class="form-group">

                        <div class="col-md-3">

                            <input type="submit" value="Guardar" class="btn btn-success" />

                            @Html.ActionLink("Regresar", "GetAll", "Aseguradora", htmlAttributes: new { @class = "btn btn-danger" })

                        </div>

                    </div>

                </div>

            }

        </div>

    </div>
</div>

